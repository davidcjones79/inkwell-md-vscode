{
  "name": "inkwell-md",
  "displayName": "Inkwell Markdown Preview",
  "description": "A beautiful, refined markdown preview with elegant typography",
  "version": "0.1.0",
  "publisher": "davidcjones79",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:inkwell.showPreview",
    "onCommand:inkwell.showPreviewToSide",
    "onLanguage:markdown",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json",
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inkwell.showPreview",
        "title": "Inkwell: Open Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "inkwell.showPreviewToSide",
        "title": "Inkwell: Open Preview to Side",
        "icon": "$(open-preview)"
      },
      {
        "command": "inkwell.exportHTML",
        "title": "Inkwell: Export to HTML"
      },
      {
        "command": "inkwell.toggleTheme",
        "title": "Inkwell: Toggle Theme"
      },
      {
        "command": "inkwell.zoomIn",
        "title": "Inkwell: Zoom In"
      },
      {
        "command": "inkwell.zoomOut",
        "title": "Inkwell: Zoom Out"
      },
      {
        "command": "inkwell.zoomReset",
        "title": "Inkwell: Reset Zoom"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId =~ /markdown|html|css|json|python|javascript|typescript/",
          "command": "inkwell.showPreviewToSide",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "inkwell.showPreview",
          "when": "resourceLangId =~ /markdown|html|css|json|python|javascript|typescript/"
        },
        {
          "command": "inkwell.showPreviewToSide",
          "when": "resourceLangId =~ /markdown|html|css|json|python|javascript|typescript/"
        }
      ]
    },
    "keybindings": [
      {
        "command": "inkwell.showPreviewToSide",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId =~ /markdown|html|css|json|python|javascript|typescript/"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "marked": "^9.0.0",
    "mermaid": "^11.12.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidcjones79/inkwell-md-vscode"
  }
}
