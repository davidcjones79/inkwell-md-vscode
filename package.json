{
  "name": "inkwell-md",
  "displayName": "Inkwell Markdown Preview",
  "description": "A beautiful, refined markdown preview with elegant typography",
  "version": "0.1.0",
  "publisher": "davidcjones79",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inkwell.showPreview",
        "title": "Inkwell: Open Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "inkwell.showPreviewToSide",
        "title": "Inkwell: Open Preview to Side",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "inkwell.showPreviewToSide",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "inkwell.showPreview",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "inkwell.showPreviewToSide",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "keybindings": [
      {
        "command": "inkwell.showPreviewToSide",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == markdown"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "marked": "^9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidcjones79/inkwell-md-vscode"
  }
}
